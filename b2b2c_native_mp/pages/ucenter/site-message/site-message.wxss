page {
  height: 100%;
  width: 100%;
  background-color: #f4f4f4;
}
.mg-types {
  padding: 20rpx;
}
.msg-box {
  position: relative;
  padding: 20rpx;
  background-color: #FFF;
  border: 2rpx solid #FFF;
  text-align: left;
  height: 120rpx;
}
.mg-types .mg-timg {
  width: 68rpx;
  height: 68rpx;
  border-radius: 9rpx;
  float: left;
  position: relative;
}
.mg-types .system-icon {
  background-color: #eade87;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-position: center center;
}
.mg-types .ask-icon {
  background-color: #87eaea;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-position: center center;
}
.mg-types .mg-tcont {
  float: left;
  padding-left: 36rpx;
}
.mg-types .mg-title {
  height: 42rpx;
  line-height: 48rpx;
}
.mg-types .mg-title text {
  color: #000;
  font-weight: 700;
}