page {
  height: 100%;
}
.complaint-switch {
  position: fixed;
  top: 0;
  width: 100%;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.complaint-switch .item {
  flex: 1;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
}
.complaint-switch .item.active{
  color: #f42424;
  border-bottom: 4rpx solid #f42424;
}
.complaint-list {
  padding-top: 90rpx;
}
.complaint-item {
  margin: 20rpx 0;
  background-color: #fff;
}
.complaint-item .comp {
  padding: 10rpx 20rpx;
  border-bottom: 2rpx solid #f4f4f4;
}
.complaint-content .shop-info, .complaint-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.complaint-content .shop-info .icon {
  font-size: 20rpx;
  margin-top: -12rpx;
}
.complaint-content .goods-info {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
}
.complaint-content .goods-info .goods-img {
  width: 120rpx;
  height: 120rpx;
}
.complaint-content .goods-info .goods-img .img {
  width: 100%;
  height: 100%;
}
.complaint-content .goods-cont {
  margin-left: 20rpx;
  flex: 1;
}
.complaint-content .goods-cont .goods-name{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.complaint-content .goods-cont .order-sn {
  color: #8f8f8f;
  margin-top: 20rpx;
}
.complaint-content .shop-name, .complaint-status .status {
  color: #6592DD;
}
.complaint-status {
  padding: 10rpx 20rpx;
}
.complaint-status .right {
  display: flex;
}
.complaint-status .txt {
  background-color: #e4393c;
  color: #fff;
  padding: 8rpx 20rpx;
  margin-left: 20rpx;
  border-radius: 8rpx;
}