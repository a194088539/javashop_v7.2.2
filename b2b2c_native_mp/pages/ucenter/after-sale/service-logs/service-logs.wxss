view {
  position: relative;
  box-sizing: border-box;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
  flex-shrink: 0;
}

.log-item {
  flex-direction: row;
  justify-content: flex-start;
}
.item-line {
  flex-direction: column;
  width: 110rpx;
  align-items: center;
}
.item-line .line-top {
  height: 32rpx;
  width: 1rpx;
  background-color: rgb(255, 255, 255);
}
.item-line .mark {
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
  background-color: rgb(240, 37, 15);
  border-style: solid;
  border-width: 4rpx;
  border-color: rgba(240, 37, 15, 0.2);
}
.item-line .line-down {
  flex: 1 1 0%;
  width: 2rpx;
  background-color: rgb(227, 229, 233);
}
.item-line .line-top-more {
  height: 32rpx;
  width:2rpx;
  background-color: rgb(227, 229, 233);
}
.item-line  .mark-more {
  width: 16rpx;
  height: 16rpx;
  border-radius: 10rpx;
  background-color: rgb(191, 191, 191);
}
.log-detail {
  flex-direction: column;
  flex: 1;
}
.log-detail .detail-box {
  flex-direction: column;
}
.log-detail .detail-box text {
  display: inline-block;
  font-family: PingFangSC-Semibold;
}
.log-detail .detail-box .box-title {
  margin: 0 0 26rpx;
  font-size: 30rpx;
  color: rgb(46, 45, 45);
  font-weight: bold;
  line-height: 36rpx;
}
.log-detail .detail-box .box-content {
  margin: 0 0 16rpx;
  font-size: 26rpx;
  color: rgb(46, 45, 45);
  line-height: 32rpx;
}
.log-detail .detail-box .box-time {
  font-size: 22rpx;
  color: rgb(132, 132, 132);
  line-height: 30rpx;
}
.log-detail .detail-box .bottom-line {
  height: 2rpx;
  background-color: rgb(238, 238, 238);
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 90%;
}