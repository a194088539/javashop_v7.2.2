page{
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
}
.after-sale{
  padding-top: 84rpx;
}
.react-view {
  position: relative;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
}
.main-page {
  margin-top: 22rpx;
  background-color: rgb(255, 255, 255);
}
.seller-box {
  flex-direction: row;
  align-items: center;
  padding: 0 32rpx 22rpx 32rpx;
  border-style: solid;
  border-width: 0 0 2rpx;
  border-color: black black rgb(240, 240, 240);
  background-color: rgb(255, 255, 255);
  margin-bottom: 22rpx;
}
.goods-box {
  background-color: rgb(255, 255, 255);
  flex-direction: column;
  align-items: flex-start;
  padding-right: 32rpx;
  padding-left: 32rpx;
}
.seller-box-content {
  flex: 1 1 0%;
  flex-direction: row;
  align-items: center;

}
.seller-box-content text {
  display: inline-block;
  margin: 0 0 0 10rpx;
  color: rgb(102, 102, 102);
  font-size: 24rpx;
  line-height: 28rpx;
}
.goods-box-content {
  flex-direction: row;
  align-items: stretch;
}
.goods-box-img {
  background-color: transparent;
  cursor: pointer;
}
.goods-box-img image {
  justify-content: flex-end;
  align-items: flex-end;
  height: 132rpx;
  width: 132rpx;
  margin-right: 32rpx;
  border-radius:8rpx;
}
.goods-box-name {
  flex: 1 1 0%;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}
.goods-box-name .goods-name {
  display: -webkit-box;
  font-size: 26rpx;
  color: rgb(46, 45, 45);
  line-height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  overflow-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  max-height: 72rpx;
  white-space: normal;
}
.goods-box-name  .goods-num{
  display: inline-block;
  margin: 0 0 14rpx;
  font-size: 22rpx;
  color: rgb(132, 132, 132);
  line-height: 38rpx;
}
.btn-box {
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 22rpx;
  margin-top: 22rpx;
  background-color: rgb(255, 255, 255);
}
.btn-box-left {
  width: 70%;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.btn-box-left text {
  display: inline-block;
  font-size: 22rpx;
  color: rgb(132, 132, 132);
  line-height: 26rpx;
  float: left;
}
.btn-box-left image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
  float: left;
}
.btn-box-right {
  border-style: solid;
  border-width: 2rpx;
  border-radius: 44rpx;
  padding: 10rpx 30rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-color: rgb(240, 37, 15);
}
.btn-box-right text {
  display: inline-block;
  font-size: 26rpx;
  color: rgb(240, 37, 15);
  line-height: 30rpx;
}
.service-num-box {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 38px;
  padding-right: 16px;
  padding-left: 16px;
  width: 100%;
}
.service-num-box text {
  display: inline-block;
  margin: 0px;
  padding: 0px;
  font-size: 13px;
  color: rgb(102, 102, 102);
  line-height: 15.6px;
}
.service-num-box  image {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}
.box-line {
  border-style: solid;
  border-width: 0px 0px 1px;
  border-color: black black rgb(240, 240, 240);
}
.service-status-box {
  flex-direction: row;
  align-items: center;
  height: 54px;
  margin: 16px 0px;
  background-color: rgb(246, 246, 246);
  border-style: solid;
  border-width: 1px;
  border-color: rgb(246, 246, 246);
  border-radius: 4px;
}
.service-status-box  text {
  display: -webkit-box;
  margin: 0px;
  padding: 0px 23px 0px 16px;
  font-size: 12px;
  color: rgb(46, 45, 45);
  line-height: 14.4px;
  overflow: hidden;
  text-overflow: ellipsis;
  overflow-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  max-height: 14.4px;
  white-space: normal;
}
.service-status-box icon{
  font-size: 26rpx;
  margin-top: -18rpx;
}