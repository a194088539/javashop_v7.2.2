.address-container{
  height: 100%;
  width: 100%;
}

.add-address{
    position: fixed;
    border-radius: 0;
    border: none;
    bottom: 0;
    left:0;
    width: 100%;
    line-height: 99rpx;
    z-index: 99;
}
.add-address .text{
    background: #f42424;
    text-align: center;
    color: #fff;
    font-size: 29rpx;
}
.address-list{
    margin-bottom: 120rpx;
}
.address-item{
    display: flex;
    position: relative;
    margin:  0 0 0 20rpx;
}
.address-content{
    padding: 20rpx 0;
    border-bottom: 2rpx solid #f1f1f1;
}
.address-content .add-name, .address-content .add-mobile{
    display: inline-block;
    font-size: 28rpx;
    line-height: 30rpx;
    margin-right: 30rpx;
    overflow: hidden;
}
.address-content .address-detail{
    color: #666;
    font-size: 26rpx;
    line-height: 40rpx;
    word-break: break-all;
    word-wrap: break-word;
    margin-right: 120rpx;
}
.address-content .add-def-icon{
    padding: 2rpx 14rpx;
    background: #f42424;
    color: #fff;
    font-size: 24rpx;
    font-style: normal;
    margin-right: 10rpx;
}
.address-content .add-alias{
    display: inline-block;
    font-size: 24rpx;
    border: 2rpx solid #686868;
    line-height: 32rpx;
    text-align: center;
    padding: 0 20rpx;
}

.addr{
    position: absolute;
    top: 50%;
    right: 0;
    height: 72rpx;
    line-height: 110rpx;
    margin-top: -36rpx;
    border-left: 2rpx solid #cbcacf;
    padding-left: 20rpx;
    padding-right: 20rpx;
}
.addr .icon{
    width: 50rpx;
    height: 50rpx;
} 