.big-btn {
    padding: 20rpx 20rpx 0 20rpx;
}
.big-btn .button_large {
    background-color: #f42424;
}
.big-btn .button_large text{
    color: #fff;
}
.button_disabled {
    background-color: #e8e8e8;
}
.button_disabled text{
    color: #999;
}
.change-success {
    padding-top: 92rpx;
    width: 100%;
    min-height: 600rpx;
}
.inner-success {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 40rpx;
}
.icon-success {
    width: 100rpx;
    height: 100rpx;
    margin-right: 30rpx;
}
.success-title {
    font-size: 32rpx;
    color: #333;
}
.success-mobile {
    margin-top: 10rpx;
}
.field .clear{
    display: inline-block;
}
