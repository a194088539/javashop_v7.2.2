
.faq_goods {
  position: relative;
  padding: 20rpx;
  height: 150rpx;
  background-color: #fff;
}
.faq_goods_cover {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
}
.faq_goods .faq_goods_cover {
  width: 100rpx;
  height: 100rpx;
}
.faq_goods_cover image {
  width: 100%;
  height: 100%;
}
.faq_goods .faq_goods_info {
  margin-left: 120rpx;
  padding: 14rpx 0;
}
.faq_goods_info_name {
  color: #333;
  font-size: 24rpx;
  height: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.faq_question {
  padding: 20rpx;
  background-color: #fff;
}
.faq_question_wrap {
  position: relative;
  border-radius: 4rpx;
}
.faq_question_head {
  position: relative;
  color: #333;
  font-size: 30rpx;
  font-weight: 700;
  line-height: 1.5;
  word-wrap: break-word;
}

.faq_publish{
  padding: 20rpx;
  background-color: #fff;
}
.faq_publish .faq_publish_text {
    position: relative;
}
.faq_publish .faq_publish_text textarea{
    border: none;
    background: none;
    appearance: none;
    border-radius: 0;
    display: block;
    padding: 20rpx;
    width: 100%;
    height: 100px;
    color: #333;
    font-size: 28rpx;
    box-sizing: border-box;
}
.faq_publish .faq_publish_text::before {
    content: "";
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #ddd;
    border: 2rpx solid #ddd;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: none;
    border-color: #ddd;
}
.icon-xuanze1{
  color: #18c461;
}
.faq_publish .checked{
  height: 80rpx;
  line-height: 80rpx;
}
.faq_publish .checked icon{
  margin-top: -5rpx;
}
.faq_publish .checked text{
  margin-left: 10rpx;
}
.faq_publish_btn{
  height: 40px;
  line-height: 40px;
  color: #fff;
  font-size: 32rpx;
  background-color: #3985ff;
  text-align: center;
  width: 48%;
  display: inline-block;
}
.faq_publish_btn:first-child{
  background-color: #b50005;
}
.faq_publish_btn:last-child{
  float: right;
}
.faq_publish_btn.disabled{
  color: #999;
  background-color: #ccc;
}