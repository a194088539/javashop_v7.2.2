.performance-switch{
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
    height: 84rpx;
    border-bottom: 2rpx solid rgba(0,0,0,.15);
}

.performance-switch .item{
    display: inline-block;
    height: 82rpx;
    line-height: 80rpx;
    width: 33.33%;
    text-align: center;
    font-size: 26rpx;
}

.performance-switch .item.active{
    color: #f42424;
    border-bottom: 4rpx solid #f42424;
}
.settlement-total-container {
    padding: 100rpx 30rpx 30rpx 30rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    align-items: center;
    border-bottom: 2rpx solid #f5f5f5;
  }
.settlement-total-container .color-red {
    color: #f42424;
    word-break: keep-all;
}
.content .item{
  width: 100%;
  display: flex;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  line-height: 48rpx;
  position: relative;
  overflow: hidden;
  border-bottom: 2rpx solid #f5f5f5;
}
.content .item-detail{
  padding: 30rpx;
  box-sizing: border-box;
  line-height: 48rpx;
  position: relative;
  overflow: hidden;
  border-bottom: 2rpx solid #f5f5f5;
}
.content .item .text{
  flex: 1;
}
.content icon{
  color: #999;
  margin: -10rpx 0 0 10rpx;
}
.content .item-detail view{
  width: 50%;
  font-size: 22rpx;
  text-align: left;
  color: #666;
  display: inline-block;
}
.content .item-detail view text{
  color: #666;
}
.content .btn-custom text{
  background-color: #fff;
  border: 2rpx solid #999;
  border-radius: 6rpx;
  width: 30rpx;
  color: #333 !important;
  padding: 6rpx 15rpx;
}
