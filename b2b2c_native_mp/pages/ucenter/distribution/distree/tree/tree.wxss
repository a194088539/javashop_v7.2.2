.color-red{
  color: #f42424;
}
.flex {
  display: flex;
  justify-content: flex-start;
}
.contanier {
  padding-left: 52rpx;
  padding-right: 20rpx;
  flex-direction: column;
}
.contanier .small-panel {
  margin-top: 10rpx;
}
  
.small-panel,.bottom-panel {
  flex-direction: row;
  height: 40rpx;
  font-size: 16rpx;
  color: #333;
}
.contanier .body-panel {
  height: 48rpx;
  flex-direction: row;
  justify-content: space-between;
}
.contanier .body-panel .title{
  position: relative;
}
.contanier .body-panel .arrow{
  position: absolute;
  width:0;
  height: 0;
  left: -26rpx;
  border-style: solid;
  z-index: 1;
}
.txt{
  margin-top: 4rpx;
}
.contanier .body-panel .arrow.close{
  border-width: 12rpx 0 12rpx 12rpx;
  border-color: transparent transparent transparent #aaa;
}
.contanier .body-panel .arrow.open{
  top: 8rpx;
  border-width: 12rpx 12rpx 0;
  border-color: #aaa transparent transparent;
}
.contanier .body-panel .time{
  font-size: 28rpx;
  color: #ff853f;
}
.contanier .body-panel .t-icon{
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  background-size: 100% 100% !important;
  vertical-align: middle;
  margin: -6rpx 4rpx 0 0;
}
.contanier .body-panel .t-icon.m-dep{
  background: url(data:image/png;base64,);
}

.list-item{
  min-height: 120rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
  height: auto;
  padding-top: 0;
  padding-right: 0;
}
.list-item .box{
  display: block;
  padding-left: 108rpx;
  box-shadow: none;
}
.list-item .box .list-item.node:not(:last-child) .line{
  content: '';
  display: block;
  background-color: #ddd;
  position: absolute;
  width: 1rpx;
  height: 100%;
  left: -72rpx;
  top: -76rpx;
}
.list-item .box .list-item::before,.list-item .box .list-item::after{
  content: '';
  display: block;
  background-color: #ddd;
  position: absolute;
}
.list-item .box .list-item::before{
  width: 2rpx;
  height: 140rpx;
  left: -72rpx;
  top: -80rpx;
}
.list-item .box .list-item::after{
  width: 96rpx;
  height: 2rpx;
  left: -70rpx;
  top: 60rpx;
}