.container{
  background: #fff;
}
.footprint-container{
  padding-top: 70rpx;
}

.foot-print{
  width: 100%;
  border-bottom: 4rpx solid #e5e5e5;
}
.foot-print .foot-print-time{
  width: 100%;
  border-bottom: 2rpx solid #f1f1f1;
  padding: 20rpx;
  font-size: 32rpx;
}
.goods-list{
  position: relative;
  background:#fff;
}
.goods-list .goods-info{
  width: 100%;
  display: flex;
  z-index: 5; 
  background-color: #fff;
  transition: left 0.2s ease-in-out;
}
.goods-info-exit{
  padding: 20rpx;
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: flex-start;
}
.goods-info-exit .goods-img{
  width: 150rpx;
  height: 150rpx;
}
.goods-info-exit .goods-text{
  width: calc(100% - 170rpx);
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}
.goods-info-exit .goods-text .goods-name{
  font-size: 24rpx;
  color: #333;
}
.goods-info-exit .goods-text .goods-price{
  font-size: 26rpx;
  color: #f42424;
}

/* ------顶部------ */
.btn-top{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  position: fixed;
  top: 0;
  z-index: 999;
  background: #fff;
}
.btn-top .right{
  float: right;
}
.btn-top text{
  margin-right: 20rpx;
}
/** 底部按钮 */
.footprint-bottom{
  position: fixed;
  bottom:0;
  left:0;
  z-index: 99;
  height: 100rpx;
  width: 100%;
  background: #fff;
  display: flex;
	align-items: center;
  padding-left: 20rpx;
}
.footprint-bottom .all-check{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.footprint-bottom .all-check icon{
  margin: -13rpx 10rpx 0 0 ;
  font-size: 32rpx;
}
.footprint-bottom .text{
  flex: 1;
  font-weight: 500;
  text-align: right;
  color: #333;
  padding-right: 24rpx;
}
.footprint-bottom .btn{
  width: 220rpx;
  height: 100%;
  font-size: 28rpx;
  padding: 0 30rpx;
  color: #fff;
  line-height: 95rpx;
  text-align: center;
  background-color: #f44;
}

.sku-check{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 130rpx;
}
.sku-check icon{
  font-size: 32rpx;
}