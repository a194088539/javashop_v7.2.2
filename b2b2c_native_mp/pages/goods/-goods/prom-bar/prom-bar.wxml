<view class='prom-bar-container'>
  <view class='prom-price'>￥ <text>{{price}}</text></view>
  <view class='msg'>
    <view class='text'>
      <text class='old-price'>￥{{oldprice}}</text>
    </view>
    <view class='text'>
      <text class='icon {{type}}'>{{title}}</text>
    </view>
  </view>
  <view class='count-down'>
    <view class='count-down-text'>距离结束还剩</view>
    <view class='count-down-times'>
      <text wx:if="{{day>0}}" class="day">{{day}}天</text>
      <text class='time'>{{hours}}</text>:
      <text class='time'>{{minutes}}</text>:
      <text class='time'>{{seconds}}</text>
    </view>
  </view>
</view>