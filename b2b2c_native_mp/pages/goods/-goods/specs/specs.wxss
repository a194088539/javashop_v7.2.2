/* 规格选择 */
.goods-specs {
	width: 100%;
	line-height: 2;
}
.van-cell {
	width: 100%;
	display: flex;
	padding: 20rpx 0 20rpx 30rpx;
	box-sizing: border-box;
	line-height: 48rpx;
	position: relative;
	background-color: #fff;
	color: #333;
	font-size: 28rpx;
	overflow: hidden;
	border-bottom: 2rpx solid #f3f3f3;
}
.cell_title {
	width: 100%;
}
.van-cell .i{
	float:right;
	width:45rpx;
	height:45rpx;
	margin-right:16rpx;
}

/* 规格弹框 */

.header{
  position: relative;
}
.header .close {
	position: absolute;
	width: 48rpx;
	height: 48rpx;
	right: 24rpx;
	overflow: hidden;
	top: 15rpx;
}

.header .close .icon {
	width: 48rpx;
	height: 48rpx;
}

.header .img-info{
	height:160rpx;
	overflow: hidden;
	margin-bottom: 10rpx;
}
.header .pic{
  position: absolute;
  left: 8px;
  top: -26px;
  width: 200rpx;
  height: 200rpx;
  border-radius: 3px;
  border: 1px solid #f0f1f3;
  background-color: #fff;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-pack: center;
  -webkit-box-align: center;
}
.header .pic .img{
	height: 200rpx;
	width: 200rpx;
  overflow: hidden;
}
.header .info{
	height: 160rpx;
	display: flex;
	align-items: center;
  overflow: hidden;
  margin-left: 240rpx;
  padding-top: 50rpx;
}

.header .p{
	font-size: 33rpx;
	color: #f42424;
	line-height: 50rpx;
}

.spec-con .spec-sel{
	font-size: 29rpx;
	color: #222;
  margin: 20rpx;
}

.spec-con .spec-sel text{
	margin: auto 6rpx;
}

.spec-con{
  border-top: 1px solid #e3e5e9;
  height: calc(100% - 270rpx);
}
.spec-con .spec-item{
  margin: 26rpx 20rpx;
  font-size: 0;
  overflow: hidden;
  position: relative;
}

.spec-con .name{
	margin-bottom: 22rpx;
	font-size: 29rpx;
	color: #333;
}

.spec-con .values{
	height: auto;
	font-size: 0;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-wrap: wrap;
}

.spec-con .value{
	display: inline-block;
	padding: 10rpx;
	line-height: 1;
	border-radius: 10rpx;
	text-align: center;
	margin-right: 25rpx;
	margin-bottom: 16.5rpx;
	border: 2rpx solid #bfbfbf;
	font-size: 25rpx;
	color: #232326;
}

.spec-con .value.disable{
	border: 2rpx solid #ccc;
	color: #ccc;
}

.spec-con .value.selected{
	border: 2rpx solid #f42424;
	color: #f42424;
}
.number-item{
  margin: 26rpx 20rpx;
}
.number-item .selnum{
	width: 322rpx;
	height: 71rpx;
	border: 1px solid #ccc;
	display: flex;
}

.number-item .cut,.number-item .add{
	width: 93.75rpx;
	height: 100%;
	text-align: center;
	line-height: 65rpx;
  font-size: 38rpx;
}

.number-item .number{
	flex: 1;
	height: 100%;
	text-align: center;
	line-height: 68.75rpx;
	border-left: 2rpx solid #ccc;
	border-right: 2rpx solid #ccc;
	float: left;
}
.spec-footer{
  position: fixed;
  left: 0;
  display: flex;
  width: 100%;
  height: 100rpx;
}
.spec-footer .buy-bth{
  display: block;
  flex: 1;
  line-height: 96rpx;
  color: #fff;
  text-align: center;
}
.spec-footer .add-cart{
  background-color: #ffb03f;
}
.spec-footer .direct-order{
  background-color: #f23030;
}