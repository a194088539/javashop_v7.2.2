<view wx:if="{{ show }}" class="canvas-box" catchtouchmove="true">
  <view wx:if="{{showDisPopup}}" class="clone" bindtap="cloneCanvas" style="top:{{45 * rpx}}px;"><image src="../../../../static/images/icon_close.png"></image></view>
  <canvas style="width: {{ windowW }}px; height: {{ windowH }}px;" canvas-id="firstCanvas" class="firstCanvas"></canvas>
  <view wx:if="{{showDisPopup}}" bindtap="savePictures" class="btnSave" style="top:{{515 * rpx}}px;">保存图片</view>
</view>