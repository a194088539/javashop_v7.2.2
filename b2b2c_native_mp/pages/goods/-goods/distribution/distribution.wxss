.canvas-box{
  position: fixed;
  top: 0;
  z-index: 999;
  background-color: rgba(0,0,0,.6);
}
.canvas-box .clone{
  position: absolute;
  right: 12%;
  z-index: 999;
  width: 45rpx;
  height: 45rpx;
  background-color: #fff;
  border-radius: 50%;
}
.canvas-box .clone image{
  width: 100%;
  height: 100%;
}
.firstCanvas{
  display: block !important;
}

.btnSave{
  font-size: 26rpx;
  background: #f42424;
  color: #fff;
  width: 520rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
  text-align: center;
  position: absolute;
  /* bottom: 85rpx; */
  left: 15%;
}