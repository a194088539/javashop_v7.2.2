.prom-bar-container{
	position: relative;
	display: flex;
	align-items: center;
	justify-content: space-between;
	z-index: 7;
	height: 98rpx;
	color: #fff;
	margin: 0 20rpx;
	background-size: 518rpx,100%;
}
.prom-bar-container .prom-price{
	font-size: 28rpx;
	font-weight: 700;
}
.prom-bar-container .prom-price text{
	font-size: 48rpx;
}
.prom-bar-container .msg{
	font-size: 24rpx;
}
.prom-bar-container .msg .icon{
	position: relative;
	display: inline-block;
	margin: -4rpx 6rpx 0 0;
	padding: 0 6rpx 0 36rpx;
	height: 32rpx;
	vertical-align: middle;
	line-height: 32rpx;
	font-size: 22rpx;
	color: #fff;
}
.prom-price,.prom-price text{
	color: #fff;
}
.prom-bar-container .msg .old-price{
	text-decoration:line-through;
	color: #fff;
}
.prom-bar-container .msg .icon.exchange::before {
	background: #fff url(data:image/png;base64,) no-repeat 50%;
	background-size: 24rpx;
	content: "";
	position: absolute;
	left: 0;
	top: 0;
	width: 30rpx;
	height: 30rpx;
	border-top-left-radius: 2rpx;
	border-bottom-left-radius: 2rpx;
}
.prom-bar-container .msg .icon::after {
	content: "";
	display: block;
	border: 2rpx solid #fff;
	position: absolute;
	top: 0;
	left: 0;
	pointer-events: none;
	bottom: 0;
	right: 0;
	border-radius: 4rpx;
}
.prom-bar-container .msg .text{
  text-align: center;
}