.faq_goods{
  padding: 20rpx;
  background-color: #fff;
}
.faq_goods_navigator{
  display: flex;
}
.faq_goods_navigator .faq_goods_info{
  flex:1;
  margin-left: 20rpx;
  padding: 14rpx 0;
}
.faq_goods_navigator .faq_goods_info .faq_goods_info_name{
  height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.faq_goods_cover image{
  width: 100rpx;
  height: 100rpx;
}
.faq_goods_right image{
	width:45rpx;
	height:45rpx;
  margin-top: 26rpx;
}

.faq_question {
    padding: 0 20rpx 20rpx;
    background-color: #fff;
  }
  .faq_question_wrap {
    position: relative;
    padding: 0 20rpx 12rpx;
    background-color: #f2f2f7;
    border-radius: 4rpx;
  }
  .faq_question_wrap::before {
    content: "";
    position: absolute;
    top: -20rpx;
    left: 64rpx;
    width: 0;
    height: 0;
    border-width: 10rpx;
    border-color: transparent transparent #f2f2f7;
    border-style: dashed dashed solid;
  }
  .faq_question_head {
    position: relative;
    height: 68rpx;
    line-height: 68rpx;
    color: #666;
    font-size: 24rpx;
  }
  .faq_question_head_time {
    position: absolute;
    top: 0;
    right: 0;
    color: #999;
    font-size: 22rpx;
  }
  .faq_question_desc {
    position: relative;
    padding-left: 40rpx;
    color: #333;
    font-size: 28rpx;
    font-weight: 700;
    word-wrap: break-word;
  }
  .faq_question_desc::before {
    content: "Q";
    display: inline-block;
    margin: -4rpx 10rpx 0 -40rpx;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: 400;
    background-color: #ff9600;
    text-align: center;
    border-radius: 4rpx;
    vertical-align: middle;
  }
  .faq_answers_num {
    padding: 0 20rpx;
    height: 64rpx;
    line-height: 64rpx;
    color: #666;
    font-size: 24rpx;
    background-color: #e8e8ed;
  }
   .faq_answers_list {
    padding: 0 20rpx;
    background-color: #fff;
  }
  .faq_answers_list .list:not(:last-child)::after {
    content: "";
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: #ddd;
    height: 2rpx;
    left: 0;
    right: 0;
    bottom: 0;
  }
  .faq_answers_list .list {
    position: relative;
    padding-bottom: 24rpx;
  }
  .faq_answers_list_head {
    position: relative;
    padding: 30rpx 0;
    color: #666;
    font-size: 24rpx;
  }
  .faq_answers_list_status {
    display: inline-block;
    padding: 0 10rpx;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 22rpx;
    vertical-align: middle;
    border-radius: 2rpx;
    float: right;
    color: #999;
  }
  .faq_answers_list_status::before {
    content: "";
    display: inline-block;
    vertical-align: middle;
    width: 0;
    height: 100%;
    margin-top: 2rpx;
  }
  .faq_answers_list_desc {
    position: relative;
    margin-bottom: 10rpx;
    padding-left: 40rpx;
    color: #333;
    font-size: 28rpx;
    word-wrap: break-word;
  }
  .seller-reply::before {
    content: "S";
    display: inline-block;
    margin-right: 12rpx;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    color: #fff;
    font-size: 28rpx;
    background-color: #c41818;
    text-align: center;
    border-radius: 4rpx;
    vertical-align: middle;
  }
  .faq_answers_list_desc::before {
    content: "A";
    display: inline-block;
    margin: -4rpx 10rpx 0 -40rpx;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    color: #fff;
    font-size: 28rpx;
    background-color: #18c461;
    text-align: center;
    border-radius: 4rpx;
    vertical-align: middle;
  }
  .faq_answers_list_time {
    margin-left: 40rpx;
    color: #999;
    font-size: 20rpx;
  }
  .no-data {
    height: 200rpx;
    line-height: 200rpx;
    text-align: center;
    font-size: 28rpx;
  }