page{
  height: 100%;
  padding-bottom: 100rpx;
  background-color: rgb(234, 234, 234);
}
.faq_goods{
  padding: 20rpx;
  background-color: #fff;
}
.faq_goods_navigator{
  display: flex;
}
.faq_goods_navigator .faq_goods_info{
  flex:1;
  margin-left: 20rpx;
  padding: 14rpx 0;
}
.faq_goods_navigator .faq_goods_info .faq_goods_info_name{
  height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.faq_goods_cover image{
  width: 100rpx;
  height: 100rpx;
}
.faq_goods_right image{
	width:45rpx;
	height:45rpx;
  margin-top: 26rpx;
}
.ask-list{
  margin-top: 20rpx;
}
.no-askdata{
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 28rpx;
}
.faq_area .faq_area_list{
  position: relative;
  margin-bottom: 20rpx;
  padding: 0 20rpx 24rpx;
  background-color: #fff;
}
.faq_area .faq_area_list .faq_area_head{
  position: relative;
  margin-bottom: 20rpx;
  height: 68rpx;
  line-height: 68rpx;
  color: #666;
  font-size: 24rpx;
}
.faq_area .faq_area_list .faq_area_head .faq_area_head_time{
  position: absolute;
  top: 0;
  right: 0;
  color: #999;
  font-size: 22rpx;
}

.faq_area .faq_area_list .faq_area_tit{
  position: relative;
  margin-bottom: 4rpx;
  padding-left: 40rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.faq_area .faq_area_list .faq_area_tit::before {
    content: "Q";
    display: inline-block;
    margin: -4rpx 10rpx 0 -40rpx;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: 400;
    background-color: #ff9600;
    text-align: center;
    border-radius: 4rpx;
    vertical-align: middle;
}
.faq_area .faq_area_list .faq_area_desc{
  position: relative;
  margin-bottom: 10rpx;
  padding-left: 40rpx;
  color: #333;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.faq_area .faq_area_list .faq_area_desc::before{
  content: "A";
  display: inline-block;
  margin: -4rpx 10rpx 0 -40rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #18c461;
  text-align: center;
  border-radius: 4rpx;
  vertical-align: middle;
}
.faq_area .faq_area_list .faq_area_num{
  color: #3985ff;
  font-size: 24rpx;
  text-align: right;
}
.faq_area .faq_area_list .faq_area_num icon{
  font-size: 24rpx;
  margin-top: -20rpx;
}
.faq_btn{
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 30rpx;
  background-color: #3985ff;
  text-align: center;
}
.faq_btn.fixed{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 101;
}
.hide {
  display: none;
}

.faq_publish{
  padding: 0 20rpx 30rpx;
  background-color: #fff;
}
.faq_publish .faq_publish_text {
  position: relative;
}
.faq_publish .faq_publish_text textarea{
  border: none;
  background: none;
  appearance: none;
  border-radius: 0;
  display: block;
  padding: 20rpx;
  width: 100%;
  height: 200rpx;
  color: #333;
  font-size: 28rpx;
  box-sizing: border-box;
}
.faq_publish .faq_publish_text::before {
  content: "";
  position: absolute;
  z-index: 1;
  pointer-events: none;
  background-color: #ddd;
  border: 1px solid #ddd;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: none;
  border-color: #ddd;
}
.icon-xuanze1{
  color: #18c461;
}
.faq_publish .checked{
  height: 80rpx;
  line-height: 80rpx;
}
.faq_publish .checked icon{
  margin-top: -2rpx;
}
.faq_publish .checked text{
  margin-left: 10rpx;
}
.faq_publish_btn{
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  background-color: #3985ff;
  text-align: center;
  width: 48%;
  display: inline-block;
}
.faq_publish_btn:first-child{
  background-color: #b50005;
}
.faq_publish_btn:last-child{
  float: right
}
.faq_publish_btn.disabled{
  color: #999;
  background-color: #ccc;
}