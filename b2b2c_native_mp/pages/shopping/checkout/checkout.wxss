@import '../../../styles/iconfont.wxss';
page{
  height: 100%;
  background: #f4f4f4;
}
.container{
  margin-bottom: 100rpx;
}
.no-cart .c{
  display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 40vh;
}
.no-cart .c image{
	width: 100rpx;
	height: 100rpx;
	display: inline-block;
	margin-right: 15rpx;
}

.no-cart .c navigator{
	font-weight: normal;
	font-size: 26rpx;
	color: #f42424;
}
image{
  width: 40rpx;
  height: 40rpx;
}

/*收货地址*/
.address-box{
	display: flex;
	background: #fff;
	padding: 20rpx 0 20rpx 10rpx;
}

.address-box.address-empty{
  line-height: 100rpx;
  text-align: center;
}
.address-box .m{
  flex: 1;
}
.tit-address{
  margin-left: 50rpx;
}
.address-box .name{
  color: #252525;
  font-weight: 700;
  font-size: 32rpx;
}
.address-box .mobile{
  height: 29rpx;
  line-height: 29rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  color:#333;
}
.address-box .icon{
  margin: -20rpx 10rpx 0 0;
  font-size: 35rpx;
}
.address-box .address{
  position: relative;
  height: 37.5rpx;
  line-height: 37.5rpx;
  font-size: 25rpx;
  color:#666;
}

.address-box .r{
  width: 40rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.address-list-hr{
    width: 100%;
    height: 5px;
    background: url('http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/address-bg-bd30f2bfeb.png') 0 0 repeat-x;
}
/*发票信息*/
.reicept-box{
	display: flex;
  align-items: center;
	background: #fff;
	padding: 20rpx 0 20rpx 20rpx;
}

.reicept-box .m{
	flex: 1;
}

.reicept-box text {
  flex: 3;
  text-align: right;
	overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.reicept-box .r{
	width: 40rpx;
	height: 40rpx;
}

/*支付配送*/
.paymeny-box{
	display: flex;
	background: #fff;
	padding: 20rpx 0 20rpx 20rpx;
  border-bottom: 2rpx solid #f1f1f1;
}

.paymeny-box .m{
	flex: 1;
	height: 72.25rpx;
	display:flex;
	align-items:center;
}

.paymeny-box .r{
	display: flex;
	justify-content: center;
	align-items: center;
}

/*优惠券*/
.coupon-box{
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  margin-top: 20rpx;
}

.coupon-box .coupon-item{
  width: 100%;
  overflow: hidden;
  background: #fff;
  display: flex;
  padding: 20rpx 0 20rpx 20rpx;
	justify-content: space-between;
	align-items: center;
	border-bottom: 2rpx solid #f1f1f1;
}

.coupon-box .coupon-item .l{
	display: inline-block;
}

.coupon-box .coupon-item .l .name{
  font-size: 24rpx;
}
.coupon-box .coupon-item .l .txt{
	font-size: 20rpx;
  color: #666;
}
.can-use-coupon-num {
	display: inline-block;
	background-color: #f42424;
	color: #fff !important;
	padding: 0 4rpx;
	margin-left: 10rpx;
}

.coupon-box .coupon-item .r{
  display: flex;
  justify-content: center;
  align-items: center;
}

.coupon-box .coupon-item .r text{
	display: inline-block;
	margin-right: 5rpx;
}

/** 订单备注 */
.coupon-remark {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx 0 20rpx 20rpx;
	background: #fff;
	border-bottom: 2rpx solid #f1f1f1;
}
.coupon-remark .r{
  display: flex;
}

.coupon-remark .l{
	flex: 1;
}
.coupon-remark .remark-cell {
	flex: 3;
  text-align: right;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


/*订单金额*/
.order-box{
  margin: 20rpx 0;
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.order-box .order-item{
  display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx;
}
.order-box .order-item.no-border{
  border-bottom: none;
}


/*订单提交*/
.order-total{
  position: fixed;
  left:0;
  bottom: 0;
  z-index: 10;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  display: flex;
}

.order-total .l{
  flex: 1;
  background: #fff;
  padding-left: 31.25rpx;
}

.order-total .r{
  width: 233rpx;
  background: #f42424;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
.exchange-tip{
  color: #f42424;
  font-size: 22rpx;
}
/* 公用样式 */
.price {
	color: #f42424;
}