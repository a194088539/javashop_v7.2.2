.payment-container {
	height: 100%;
  border-top: 2rpx solid #f5f5f5;
}
.pay-way {
	padding-top: 24rpx;
	background-color: #fff;
}
.pay-way-title {
	font-size: 0;
	margin: 6rpx 0 30rpx 30rpx;
}
.pay-way-title text {
	font-size: 28rpx;
	color: #686868;
  font-weight: 700;
}
.pay-way-pic {
	display: inline-block;
	width: 40rpx;
	height: 40rpx;
	margin-right: 10rpx;
	vertical-align: top;
}
.pay-way-pic image {
	width: 100%;
	height: 100%;
}
.pay-way-goods {
	padding-bottom: 30rpx;
	padding-left: 20rpx;
	margin-bottom: 30rpx;
}
.pay-way-checkbox {
	position: relative;
}
.pay-way-checkbox text {
	padding: 20rpx 32rpx;
	border-radius: 8rpx;
	text-align: center;
	line-height: 20rpx;
	border: 2rpx solid #ddd;
	display: inline-block;
	margin-right: 40rpx;
}
.time-way {
	padding-top: 24rpx;
	background-color: #fff;
	margin-top: 30rpx;
	margin-bottom: 13vw;
}
.pay-way-time {
	padding-bottom: 30rpx;
	padding-left: 20rpx;
}
.pay-way-time text {
	padding: 20rpx 32rpx;
	border-radius: 8rpx;
	text-align: center;
	line-height: 20rpx;
	border: 2rpx solid #ddd;
	display: inline-block;
	margin-right: 40rpx;
}
.big-btn {
	position: fixed;
	bottom: 0;
	width: 100%;
}
.big-btn button {
	width: 100%;
	padding: 0;
	background-color: #f42424;
	color: #fff;
	font-size: 28rpx;
	text-align: center;
	border: none;
	border-radius: 0;
  line-height: 96rpx;
}

/*公共样式*/

.checked {
	border: 2rpx solid #f42424 !important;
}