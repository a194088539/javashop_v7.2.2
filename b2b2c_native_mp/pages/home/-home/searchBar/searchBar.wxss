@import '../../../../styles/iconfont.wxss';
.search-container {
  position: fixed;
  left: 0;
  z-index: 100;
  width: 100%;
  padding: 25rpx 0;
}
.search-bg {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgb(201, 21, 35);
  transition: opacity .2s ease-in;
}
.search-main {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
}
.search-main .search-logo {
  width: 20%;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  font-weight: 400;
  line-height: 1.2;
}
.search-main .search-input{
  width: 65%;
  background-color: #fff;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}
.search-main .search-input icon{
  color: #ccc;
  margin:  -10rpx 10rpx 0 10rpx;
  font-size: 36rpx;
}
.search-main .search-input .place-holder-text{
  padding: 10rpx 0;
  color: #ccc;
}

.search-main .search-icon {
  width: 15%;
  text-align: center;
  color: #fff;
}
.search-main .search-icon icon{
 font-size: 46rpx;
}