.menu-container {
  position: relative;
  width: 100%;
  margin-top: -20rpx;
  margin-bottom: 20rpx;
  z-index: 98;
  padding: 10rpx 20rpx 20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #fff;
}
.menu-container-content {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100%;
}
.menu-container-content-list {
  width: 20%;
  display: block;
  box-sizing: border-box;
  color: #686868;
  text-align: center;
  padding-top: 20rpx;
}

.menu-item{
  display: flex;
  flex-wrap: nowrap;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.menu-img {
  display: block;
  width: 60%;
  height: 90rpx;
}
.menu-title {
  margin-top: 10rpx;
  font-size: 22rpx;
}