page{
  height: 100%;
  min-height: 100%;
  background: #f4f4f4;
}
.container{
  background: #f4f4f4;
  width: 100%;
  height: auto;
  min-height: 100%;
  overflow: hidden;
}
/*购物车无数据*/
.no-cart{
  width: 100%;
  height: auto;
  margin: 0 auto;
}

.no-cart .c{
  width: 100%;
  height: auto;
  margin-top: 260rpx;
}

.no-cart .c image{
  margin: 0 auto;
  display: block;
  text-align: center;
  width: 258rpx;
  height: 258rpx;
}

.no-cart .c text{
  margin: 20rpx auto;
  display: block;
  width: 220rpx;
  text-align: center;
  font-size: 29rpx;
}
.no-cart .goshopping{
  border: 2rpx solid #f42424;
  padding: 10rpx 20rpx;
  color: #f42424;
  border-radius: 55rpx;
}
/** 购物车商品列表 */
.cart-container {
	margin-bottom: 100rpx;
}
.shop-item {
	padding: 20rpx;
}
.inner-shop-item {
	background-color: #fff;
	overflow: hidden;
}
.title-shop-item {
	display: flex;
	position: relative;
	width: 100%;
	height: 88rpx;
	background-color: #fff;
}
.shop-check {
	display: flex;
	justify-content: space-around;
	align-items: center;
	width: 10%;
	height: 100%;
}
.shop-name {
	width: 60%;
	height: 100%;
	background: url('data:image/png;base64,') no-repeat left center;
	background-size: 52rpx;
	background-position-y: 20rpx;
	line-height: 88rpx;
	padding-left: 60rpx;
	font-size: 28rpx;
	overflow: hidden;
}
.shop-other {
	width: 30%;
	text-align: right;
	margin-top: 20rpx;
}
.receive-coupons {
	display: inline-block;
	margin-right: 20rpx;
}
.receive-coupons .seller-coupons {
	border-left: 2rpx solid #999;
	font-size: 28rpx;
	padding-left: 10rpx;
}

.sku-item-li{
  border-bottom: 2rpx dashed #dcdcdc;
}
.sku-item-li.invalid .sku-item{
  filter: grayscale(1);
}
.sku-item-li:last-child {
  border-bottom: none;
}
.sku-items{
  position: relative;
  overflow: hidden;
  background:#fff;
  margin-bottom: 10rpx;
}
.sku-item {
	position: relative;
	display: flex;
	width: 100%;
	min-height: 180rpx;
	padding-top: 20rpx;
}

.sku-check {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  margin-top: 6%;
	justify-content: space-around;
	width: 15%;
}

.sku-image {
	position: relative;
	height: 100%;
  margin-right: 10rpx;
}
.sku-image image {
	width: 160rpx;
	height: 160rpx;
	border: 1px solid #e3e5e9;
}
.sku-image .out-of-stock-tip {
	text-align: center;
	display: block;
	position: absolute;
	bottom: 0;
	left: 0;
	width: 160rpx;
	height: 40rpx;
	background-color: rgba(0,0,0,0.7);
	color: #fff;
}

.sku-content {
	width: 74%;
	height: 100%;
	padding-right: 20rpx;
}
.sku-content .sku-name {
	display: -webkit-box;
	text-overflow: ellipsis;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	word-break: break-all;
	font-size: 26rpx;
	height: 60rpx;
	margin-bottom: 6rpx;
	line-height: 30rpx;
	overflow: hidden;
}
.sku-content .sku-spec {
	width: 100%;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1; 
}
.sku-content .sku-spec text {
  font-size: 24rpx;
	color: #ff9800!important;
}

.sku-tools {
	position: relative;
	height: 55rpx;
	margin-top: 6rpx;
}
.sku-price {
	color: #f42424;
	font-size: 26rpx;
	line-height: 52rpx;
}
.sku-price text {
	font-style: normal;
	font-size: 30rpx;
	margin-left: 4rpx;
	color: #f42424;
}
.sku-num {
	display: flex;
	position: absolute;
	top: 0;
	right: 0;
	width: 180rpx;
	box-sizing: border-box;
	white-space: nowrap;
	font-size: 0;
	border: 2rpx solid #cbcbcb;
	border-radius: 6rpx;
}
.sku-num .sku-symbol {
	width: 200rpx;
	height: 46rpx;
  line-height: 44rpx;
	text-align: center;
  font-size: 46rpx;
  color: #666;
}
.sku-num .symbol-less {
	background-size: 70%;
	border-right: 2rpx solid #cbcbcb;
}
.sku-num .symbol-less.disabled {
	background-size: 70%;
}
.sku-num .symbol-add {
	background-size: 70%;
	border-left: 2rpx solid #cbcbcb;
}
.sku-num .symbol-add.disabled {
	background-size: 70%;
}
.sku-num .sku-num-input {
	border: none;
	outline: none;
	display: flex;
	align-items: center;
	text-align: center;
	color: #232326;
	font-size: 24rpx;
  height: 46rpx;
	-webkit-appearance: none;
}

.all-check {
	display: flex;
	align-items: center;
	margin-left: 20rpx;
}


.act-box {
	padding-left: 15%;
	margin-bottom: 20rpx;
}
.promotion-notice {
	padding-left: 15%;
	color: #f42424;
}
.act-item {
	display: flex;
	justify-content: space-between;
	position: relative;
	padding: 15rpx 20rpx;
	margin-top: 10rpx;
	margin-right: 20rpx;
	background-color: #FDF3F3;
	border-radius: 4rpx;
}
.act-item ::before {
	 content: ' ';
	 position: absolute;
	 top: -10rpx;
	 left: 30rpx;
	 width: 20rpx;
	 height: 20rpx;
	 background-color: #FDF3F3;
	 transform: rotate(45deg);
}
.act-item .left {
    flex: 1;  
}
.act-item-title {
	color: #333;
	font-size: 26rpx;
}
.act-item-cont {
  margin-left: 20rpx;
}
.act-item-cont, .act-item-select text{
	color: #7f828b;
	font-size: 22rpx;
}
.act-item-select .icon{
  width: 20rpx;
  height: 15rpx;
  margin-left: 10rpx;
}

.cat-bottom-bar {
	left: 0;
	bottom: 0;
	width: 100%;
	z-index: 100;
	position: fixed;
	user-select: none;
}
.inner-bar {
	height: 100rpx;
	display: flex;
	font-size: 28rpx;
	align-items: center;
	background-color: #fff
}

.cat-bar-price {
	flex: 1;
	font-weight: 500;
	text-align: right;
	color: #333;
	padding-right: 12px;
}
.cat-bar-price text {
	display: inline-block;
}
.back-price {
	color: #777;
	font-size: 22rpx;
}
.error-message {
	color: #f42424;
	padding-left: 15%;
}
view text.sku-act-tag {
	display: inline-block;
	padding: 4rpx 10rpx;
	margin-right: 10rpx;
  line-height: 30rpx;
	border: 1px solid #f42424;
	color: #f42424 !important;
  font-size: 24rpx;
}
/** 底部按钮 */
.cart-bottom{
  position: fixed;
  bottom:0;
  left:0;
  z-index: 99;
  height: 100rpx;
  width: 100%;
  background: #fff;
  display: flex;
	align-items: center;
}

.cart-bottom .checkbox{
  line-height: 54rpx;
  margin-left: 20rpx;
}
.cart-bottom .checkbox icon{
  font-size: 32rpx;
  margin: -10rpx 10rpx 0 0;
}
.cart-bottom .total{
  height: 34rpx;
  margin: 0 10rpx;
  font-size: 25rpx;
	color: #f42424;
}

.cart-bottom .delete{
  height: 34rpx;
  width: auto;
  margin: 33rpx 18rpx;
  font-size: 29rpx;
}

.cart-bottom .checkout{
  height: 100rpx;
  width: 210rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 29rpx;
  background: #f42424;
  color: #fff;
}
.cart-bottom .checkout.disabled{
  background: #e8e8e8;
  color: #999;
}
/* 促销弹出框 */
.actionsheet {
  position: fixed;
  z-index: 2018;
  left: 0;
  right: 0;
  bottom: 0;
  color: #333;
  max-height: 90%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  background-color: #f8f8f8;
}
.actionsheet_cancel, .actionsheet_item {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: #fff;
  border-bottom: 2rpx solid #e5e5e5;
}
.actionsheet .checked{
  color: #f42424;
}
.actionsheet .disabled{
  color: #c9c9c9;
}
.actionsheet_item:last-child{
  border-bottom: none;
}
.actionsheet_cancel{
  margin-top: 20rpx;
  border-bottom: none;
} 
icon{
  font-size: 32rpx;
}