.coupon-empty {
	width: 100%;
	height: 30vh;
	text-align: center;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
}
.coupon-empty image {
	width: 100rpx;
	height: 100rpx;
	margin-right: 10rpx;
}
.coupons-container {
	padding: 20rpx;
}
.coupon-item {
	position: relative;
	padding: 0 20rpx;
	height: 194rpx;
	margin: 20rpx auto;
	overflow: hidden;
	background: radial-gradient(transparent 0, transparent 10rpx, #f42424 10rpx);
	background-size: 30rpx 30rpx;
	background-position: 18rpx 6rpx;
}

.coupon-item::before {
	content: '';
	position: absolute;
	top: 0;
	bottom: 0;
	left: 20rpx;
	right: 20rpx;
	z-index: -1;
	background-color: #f42424;
}

.coupon-item::after {
	 content: '';
	 position: absolute;
	 left: 20rpx;
	 top: 20rpx;
	 right: 20rpx;
	 bottom: 20rpx;
	 box-shadow: 0 0 40rpx 2rpx rgba(0, 0, 0, 0.5);
	 z-index: -2;
 }
.par {
	float: left;
	padding: 40rpx 24rpx;
	width: 70%;
	border-right: 4rpx dashed rgba(255, 255, 255, .3);
	text-align: left;
}
.par view {
	color: #fff;
	font-size: 24rpx;
	line-height: 24rpx;
}
.par .sign {
	font-size: 52rpx;
}
.par text {
	position: relative;
	top: -4rpx;
	font-size: 52rpx;
	color: rgba(255, 255, 255, .8);
}
.par span {
	font-size: 60rpx;
	color: #fff;
	margin-right: 10rpx;
	line-height: 91rpx;
}
.copy {
	display: inline-block;
	padding: 30rpx 20rpx;
	width: 30%;
	font-size: 50rpx;
	color: rgb(255, 255, 255);
	text-align: center;
	line-height: initial;
}
.copy text {
	font-size: 25px;
	color: #fff;
}
.copy view {
	font-size: 24rpx;
	color: #fff;
	line-height: 24rpx;
}
.i{
  position: absolute;
  left: 20%;
  top: 90rpx;
  height: 380rpx;
  width: 780rpx;
  background-color: rgba(255, 255, 255, .15);
  transform: rotate(-30deg);
}
.unavailable {
  background: #7a7a7a;
  background: radial-gradient(rgba(0, 0, 0, 0) 0, rgba(0, 0, 0, 0) 5px, #7a7a7a 5px);
  background-size: 30rpx 30rpx;
  background-position: 18rpx 6rpx;
}
.unavailable::before {
  background-color: #7a7a7a;
}