@import "../-themes/-theme1/-theme1.wxss";
@import "../-themes/-theme2/-theme2.wxss";
@import "../-themes/-theme3/-theme3.wxss";
@import "../../live-video/live-video.wxss";

.shopimgs{
  width: 100%;
  height: 320rpx;
  background-color: #fff;
}
.shopimgs image{
  width: 100%;
  height: 100%;
}
.shop-nav{
  width: 100%;
  overflow: hidden;
  text-align: center;
  background-color: #fff;
}
.shop-nav .shop-nav-ul{
  width: 100%;
  height: 100%;
  overflow: hidden;
  text-align: center;
}
.shop-nav .shop-nav-li {
  text-align: center;
  width: 32%;
  display: inline-block;
  height: 100%;
  padding: 16rpx 0;
  position: relative;
}
.shop-nav-li .num{
  font-size: 32rpx;
}
.shop-nav-li .info{
  font-size: 32rpx;
}
.shop-nav-li .f{
  width: 2rpx;
  height: 64rpx;
  display: block;
  border-right: 2rpx solid #dedede;
  position: absolute;
  top: 28rpx;
  right: 0;
}

.more-goods {
  display: block;
  text-align: center;
  color: #0366d6;
  margin: 10rpx 0;
}
.shop-detail{
  text-align: center;
  font-weight: 200;
  overflow: hidden;
  background: #fff;
  border-top: 20rpx solid #e5e5e5;
  padding: 0 20rpx 100rpx 20rpx;
}
.shop-detail .shop-detail-title{
  font-size: 32rpx;
  line-height: 64rpx;
  font-weight: 200;
  color: #000;
}
.shop-detail .shop-detail-content{
  font-size: 22rpx;
  line-height: 64rpx;
  font-weight: 200;
  color: #ccc;
}