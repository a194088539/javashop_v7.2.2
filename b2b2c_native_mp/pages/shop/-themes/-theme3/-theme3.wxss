.goods-anchor{
    display: flex;
    height: 320rpx;
    background: #fff;
    padding: 32rpx;
    overflow: hidden;
    margin: 16rpx 0 0 0;
    text-align: center;
}
.goods-anchor view{
    flex: 1;
}
.goods-anchor .hot-anchor{
    background-color: #3e4b6d;
}
.goods-anchor .rec-anchor{
    margin: 0 32rpx;
    background-color: #e3c23f;
}
.goods-anchor .new-anchor{
    background-color: #2f54b7;
}
.goods-anchor .title {
    color: #fff;
    margin: 80rpx 0 0 0;
    font-size: 38.4rpx;
    font-weight: 400;
}
.goods-anchor text{
    color: #fff;
    font-family: PingFang SC,Verdana,Helvetica Neue,Microsoft Yahei,Hiragino Sans GB,Microsoft Sans Serif,WenQuanYi Micro Hei,sans-serif;
    font-size: 28.8rpx;
    font-weight: 400;
}

.theme3 .hot-goods{
    width: 100%;
    background: #fff;
    margin: 16rpx 0 0 0;
    padding: 16rpx 0;
}
.theme3 .hot-goods .list-hot-goods{
    width: 100%;
    overflow: hidden;
}
.theme3 .hot-goods .item-hot-goods{
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: reverse;
    width: 100%;
    overflow: hidden;
    margin: 16rpx 0 32rpx 0;
    padding: 16rpx 0;
}
.theme3 .hot-goods .item-hot-goods:nth-child(2n-1){
  flex-direction: row-reverse;
}
.theme3 .hot-goods .img-hot-goods{
    width: 60%;
    height: 456rpx;
    text-align: center;
}
.theme3 .hot-goods .img-hot-goods .img {
    border-radius: 50%;
    width: 80%;
    height: 80%;
    -webkit-box-shadow: 0 2rpx 32rpx #dedede;
    box-shadow: 0 2rpx 32rpx #dedede;
}
.theme3 .hot-goods .intro-hot-goods{
    width: 33%;
    margin: 128rpx 0 0 5%;
}
.theme3 .hot-goods .intro-hot-goods .title{
    margin: 0 0 32rpx;
    font-size: 28.8px;
    font-weight: 200;
    width: 100%;
}
.theme3 .hot-goods .intro-hot-goods .title text{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    overflow: hidden;
    color: #53a0be;
}
.theme3 .hot-goods .intro-hot-goods .price{
    font-size: 22.4rpx;
    color: #333;
    font-weight: 200;
    display: block;
    width: 100%;
}
.theme3 .hot-goods .intro-hot-goods .pic{
    color: #3e4b6d;
    font-size: 28rpx;
}
.theme3 .hot-goods .intro-hot-goods .num {
    font-size: 22.4rpx;
    margin: 9.6rpx 0 0 0;
    color: #bbb;
    font-weight: 200;
    font-style: normal;
}
.theme3 .rec-goods{
    width: 100%;
    background: #fff;
    border-top: 20rpx solid #e5e5e5;
    padding: 16rpx 0;
}
.theme3 .rec-goods .list-rec-goods{
    width: 100%;
    overflow: hidden;
}
.theme3 .rec-goods .item-rec-goods{
    width: 100%;
    overflow: hidden;
    margin: 16rpx 0 32rpx 0;
    padding: 16rpx 0;
    position: relative;
}
.theme3 .rec-goods .img-rec-goods{
    overflow: hidden;
    text-align: center;
    margin: 32rpx;
    border-bottom: 2rpx dashed #dedede;
}
.theme3 .rec-goods .img-rec-goods .img{
    width: 100%;
    /* height: 100%; */
}
.theme3 .rec-goods .intro-rec-goods{
    position: absolute;
    width: 80%;
    height:160rpx;
    left: 10%;
    bottom: 64rpx;
    z-index: 10;
    background-color: rgba(229, 229, 229, .8);
}
.theme3 .rec-goods .intro-rec-goods .car{
    float: left;
    width: 128rpx;
    height: 128rpx;
    margin: 16rpx;
    display: block;
    background: url(data:image/png;base64,) no-repeat center center #404a6d;
    background-size: 70%;
}
.theme3 .rec-goods .intro-rec-goods .detail-rec-goods{
    float: left;
    width: 68%;
}
.theme3 .rec-goods .intro-rec-goods .detail-rec-goods .title{
    color: #040404;
    font-size: 24rpx;
    margin: 15rpx 0 9.6rpx 0;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
}
.theme3 .rec-goods .intro-rec-goods .detail-rec-goods .price{
    font-size: 32rpx;
    color: #ff0048;
    font-weight: 200;
}
.theme3 .rec-goods .intro-rec-goods .detail-rec-goods .sales{
    font-size: 22.4rpx;
    color: #979797;
}
.theme3 .new-goods{
    border-top: 20rpx solid #e5e5e5;
    padding: 16rpx 2%;
    position: relative;
    overflow: hidden;
    background: #EFEFEF;
}
.theme3 .new-goods .list-new-goods{
    width: 106%;
    overflow: hidden;
}
.theme3 .new-goods .item-new-goods{
    float: left;
    background: #fff;
    width: 46%;
    margin: 0 2% 16rpx 0;
    overflow: hidden;
    position: relative;
    padding: 19.2px 0;
    -webkit-box-shadow: 0 2rpx 32rpx #dedede;
    box-shadow: 0 2rpx 32rpx #dedede;
}
.theme3 .new-goods .img-new-goods .img{
    display: block;
    margin: 0 auto;
    width: 314rpx;
    height: 314rpx;
}
.theme3 .new-goods .intro-new-goods .title{
    font-size: 32rpx;
    font-weight: 200;
    margin: 0 0 9.6rpx 0;
    display: block;
    width: 90%;
    padding: 0 5%;
}
.theme3 .new-goods .intro-new-goods .title text {
    min-height: 92rpx;
    color: #53a0be;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}
.theme3 .new-goods .intro-new-goods .price {
    font-size: 25.6rpx;
    font-weight: 200;
    width: 90%;
    padding: 0 5%;
}