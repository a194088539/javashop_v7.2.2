.shop-item {
    padding: 0 20rpx;
    background: #fff;
    margin-bottom: 20rpx;
}
.shop-hd{
    display: flex;
    align-items: center;
    height: 120rpx;
}
.shop-hd .shop-logo{
    margin-right: 20rpx;
    width: 180rpx;
    height: 60rpx;
}
.shop-hd .shop-logo .img{
    display: block;
    width: 100%;
    height: 100%;
}

.shop-hd .shop-info {
    flex: 1;
    width: 100%;
    overflow: hidden;
  }
.shop-hd .shop-name {
    color: #333;
    font-size: 28rpx;
    line-height: 42rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .shop-hd .shop-desc {
    color: #999;
    font-size: 20rpx;
    line-height: 30rpx;
    height: 30rpx;
    overflow: hidden;
  }
.shop-hd .shop-desc .shop-collect {
    display: inline-block;
    margin-right: 20rpx;
    color: #999;
}
.shop-hd .shop-btn{
    position: relative;
    margin-left: 20rpx;
    font-size: 28rpx;
    color: #333;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    width: 120rpx;
}
.shop-hd .shop-btn::before {
    content: "";
    position: absolute;
    z-index: 1;
    pointer-events: none;
    border: 2rpx solid #ccc;
    top: 0;
    left: 0;
    background: none;
    right: -100%;
    bottom: -100%;
    transform: scale(0.5);
    transform-origin: 0 0;
    border-radius: 16rpx;
}
.shop-bd .shop-rec{
    padding-right: 40rpx;
}
.shop-bd .shop-rec::after {
    content: "";
    display: block;
    clear: both;
}
.shop-bd .shop-rec .shop-rec-item {
    float: left;
    margin: 0 20rpx 20rpx 0;
    background-color: #ffffff;
    width: 33.33%;
    box-sizing: border-box;
}
.shop-bd .shop-rec .shop-rec-item:last-child {
    margin-right: -40rpx;
}
.shop-bd .shop-rec .shop-rec-item .item-url{
    position: relative;
    display: block;
    padding-top: 100%;
}
.shop-bd .cover{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}
.shop-bd .cover .img{
    display: block;
    width: 222rpx;
    height: 222rpx;
    margin: 0 auto;
}
.shop-bd .item-price{
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 0 24rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    background-color: rgba(0,0,0,.5);
}

.shop-aside {
    border-bottom: 2rpx solid #f1f1f1;
}
.shop-count {
    margin: -4rpx 0 16rpx;
    flex: 1;
    color: #999;
    font-size: 24rpx;
    line-height: 36rpx;
    text-align: right;
}