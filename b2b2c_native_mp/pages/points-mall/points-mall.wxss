.points-goods-container {
	padding-top: 75rpx;
}

.item-goods {
	display: flex;
	border-bottom: solid 2rpx #dedede;
	padding: 16rpx;
	background: #fff;
}

.item-goods .dt {
	width: 240rpx;
	height: 200rpx;
	overflow: hidden;
	text-align: center;
}

.item-goods .dt image {
	width: 200rpx;
	height: 200rpx;
}

.item-goods .dd {
	flex: 2;
	position: relative;
	padding-left: 16rpx;
}

.item-goods .name-goods {
	font-size: 28rpx;
	margin-bottom: 0;
	line-height: 40rpx;
	height: 76rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	color: #252525;
}
.item-goods .descrip-goods {
	padding-top: 30rpx;
}

.item-goods .descrip-goods view {
	color: #f42424;
}

.item-goods .price-goods {
	display: flex;
	justify-content: space-between;
	margin-top: 20rpx;
}

.item-goods .price-goods text {
	color: #f42424;
}
.item-goods	.grab-btn {
	display: inline-block;
	padding: 8rpx 12px;
	color: #fff;
	background: #f42424;
	border-radius: 8rpx;
	position: absolute;
	right: 10rpx;
	bottom: 50rpx;
	font-size: 28rpx;
}