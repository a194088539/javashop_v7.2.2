.container{
    min-height: 100%;
    background-color: #f4f4f4;
}

.search-header{
    position: fixed;
    top: 0;
    z-index: 999;
    width: 750rpx;
    height: 90rpx;
    padding: 0 30rpx;
    display: flex;
    background: #fff;
    border-bottom: 2rpx solid rgba(0,0,0,.15);
    font-size: 29rpx;
    color: #333;
}

.search-header .input-box{
    position: relative;
    margin-top: 16rpx;
    float: left;
    width: 0;
    flex: 1;
    height: 59rpx;
    line-height: 59rpx;
    padding: 0 20rpx;
    background: #f4f4f4;
}

.search-header .icon{
    position: absolute;
    top: 14rpx;
    left: 20rpx;
    width: 31rpx;
    height: 31rpx;
}

.search-header .del{
    position: absolute;
    top: 3rpx;
    right: 10rpx;
    width: 53rpx;
    height: 53rpx;
    z-index: 10;
}

.search-header .keywrod{
    position: absolute;
    top: 0;
    left: 40rpx;
    width: 75%;
    height: 59rpx;
    padding-left: 30rpx;
}
.search-header .left{
   margin-top: 15rpx;
   line-height: 65rpx;
}
.search-header .right{
    margin: 28rpx 0 0 20rpx;
    width: 58rpx;
    height: 43rpx;
    line-height: 43rpx;
}
.search-type-box{
    position: absolute;
    left: 0;
    top: 66rpx;
    z-index: 101;
    padding: 20rpx;
    transition: all .3s ease-out;
}
.search-type-box .box{
    background: #484d50;
    border-radius: 12rpx;
    width: 200rpx;
    overflow: hidden;
}
.search-type-box .box::after {
    position: absolute;
    left: 40rpx;
    top: 10rpx;
    content: '';
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    background: #484d50;
    -webkit-transform: rotate(45deg);
}
.search-type-box .item {
    border-top: 2rpx solid #707476;
    margin-top: -2rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #c7c8c9;
}
.search-type-box .item icon{
    font-size: 26rpx;
    margin: 0 20rpx;
}
.no{
    margin-top: 169rpx;
}
.no-search{
    height: auto;
    overflow: hidden;
    margin-top: 91rpx;
}

.search-keywords{
    background: #fff;
    width: 750rpx;
    height: auto;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.search-keywords .h{
    padding: 0 31.25rpx;
    height: 93rpx;
    line-height: 93rpx;
    width: 100%;
    color: #999;
    font-size: 29rpx;
}

.search-keywords .title{
    display: block;
    width: 120rpx;
    float: left;
}

.search-keywords .icon{
    margin-top: 19rpx;
    float: right;
    display: block;
    margin-left: 511rpx;
    height: 55rpx;
    width: 55rpx;
}

.search-keywords .b{
    width: 750rpx;
    height: auto;
    overflow: hidden;
    padding-left: 31.25rpx;
}

.search-keywords .item{
    display: inline-block;
    width: auto;
    height: 48rpx;
    line-height: 48rpx;
    padding:0 15rpx;
    border: 1px solid #999;
    margin: 0 31.25rpx 31.25rpx 0;
    font-size: 24rpx;
    color: #333;
}

.search-keywords .item.active{
    color: #f42424;
    border: 2rpx solid #f42424;
}

.auto-complete{
    height: calc(100% - 100rpx);
    background-color: #FFFFFF;
    padding: 0 20rpx;
}
.auto-complete .auto-complete-item {
    display: flex;
    justify-content: space-between;
    line-height: 60rpx;
    color: #333;
}