.coupons-container {
	padding: 20rpx;
	height: 100vh;
}
.item-coupon {
	margin: 0 0 20rpx;
	color: #f42424;
	display: block;
	position: relative;
	height: 228rpx;
	z-index: 1;
}
.item-coupon.brought-out{
  filter: grayscale(100%)
}
.item-coupon ::after {
	 content: "";
	 position: absolute;
	 top: 10rpx;
	 bottom: 10rpx;
	 left: 0;
	 right: 100rpx;
 }
.inner-coupon {
	position: relative;
	z-index: 1;
	height: 228rpx;
	background-color: #fff;
	mask-border-source: url(data:image/png;base64,);
	mask-border-width: 20rpx 170rpx 20rpx 0;
	mask-border-slice: 20 168 20 1 fill;
	border-radius: 10rpx;
}
.img-coupon {
	display: block;
	width: 150rpx;
	height: 150rpx;
	position: absolute;
	left: 20rpx;
	top: 40rpx;
	border-radius: 8rpx;
  z-index: -1;
}
.name-coupon {
	font-size: 24rpx;
	color: #666;
	position: absolute;
	left: 180rpx;
	top: 100rpx;
	right: 160rpx;
}
.name-coupon text {
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.price-coupon {
	font-size: 28rpx;
	position: absolute;
	left: 180rpx;
	right: 160rpx;
	top: 20rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	color: #f42424;
}
.price-coupon text {
	display: inline-block;
	vertical-align: -4rpx;
	margin-right: 12rpx;
	font-size: 60rpx;
	line-height: 60rpx;
	color: #f42424;
}
.shop-name .text{
  display: inline-block;
  position: relative;
  z-index: 99;
}
.receive-coupon {
	display: flex;
	width: 150rpx;
	text-align: center;
	position: absolute;
	right: 0;
	top: 0;
	bottom: 0;
	background-color: #f42424;
	border-radius: 0 10rpx 10rpx 0;
	align-items: center;
	justify-content: center;
}
.receive-coupon .icon-receive-coupon {
	font-size: 24rpx;
	border-radius: 50%;
	text-align: center;
	margin: 0;
	width: 100rpx;
	height: 100rpx;
  color: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	border: 4rpx solid #fff;
}

.receive-coupon .icon-receive-coupon-out{
  display: block;
  font-size: 24rpx;
  border: 4rpx solid currentColor;
  border-radius: 50%;
  text-align: center;
  position: absolute;
  left: 50%;
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  line-height: 60rpx;
  color: #fff;
  margin: 0;
  width: 100rpx;
  height: 100rpx;
  padding: 18rpx 0;
  box-sizing: border-box;
  top: 50%;
}
.shop-name{
	font-size: 24rpx;
	color: #666;
	position: absolute;
	left: 180rpx;
	bottom: 20rpx;
	right: 160rpx;
}


