.tab-navs{
  position:fixed;
  top: 0;
  z-index: 10;
  width: 100%;
}
.tab-nav{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  background-color: #fff;
  vertical-align: middle;
  white-space: nowrap;
  border-top:2rpx solid #ddd;
  border-bottom:2rpx solid #ddd;
}
.top-nav-container{
  display: flex;
}
.top-nav-container .tab-item{
  padding: 0 20rpx;
  flex: 1;
  text-align: center;
}

.top-nav-container .tab-item.active {
  color: #f42424;
  border-bottom: 4rpx solid #f42424;
  line-height: 65rpx;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}