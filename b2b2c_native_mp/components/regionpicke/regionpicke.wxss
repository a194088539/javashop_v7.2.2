@import '../../styles/iconfont.wxss';
.address-popup{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 63%;
    background-color: #ffffff;
    z-index: 100;
    box-shadow: 0rpx -8rpx 46rpx 0rpx rgba(75, 76, 76, 0.76);
}
.area-title {
    text-align: center;
    position: relative;
}
.area-title .areatitle {
    position: relative;
    display: block;
    margin: 20rpx 0;
    color: #a9a9a9;
    font-size: 24rpx;
}
.areatitle .icon {
    position: absolute;
    top:-2rpx;
    right:20rpx;
    display: block;
    width: 40rpx;
    height: 40rpx;
}
.area-nav{
    position: relative;
    width: 100%;
    height: 60rpx;
}
.choosed-area{
    position: relative;
    width: 100%;
    height: 50rpx;
    border-bottom: 2rpx solid #dddddd;
    margin-top: -2rpx;
    padding-left: 20rpx;
    overflow-y: hidden;
    overflow-x: scroll;
}
.nav-li{
    float: left;
    margin-right: 40rpx;
    padding-bottom: 8rpx;
}
.nav-li.selected{
    color: #f42424;
    border-bottom: 4rpx solid #f42424;
}
.main{
    position: relative;
    left: 0;
    width: 100%;
    height: 84%;
}
.main-ul {
    float: left;
    width: 100%;
    height: 95%;
    margin-bottom: 20rpx;
}
.main-ul .main-li {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.main-ul .main-li.selected .item{
    color: #f42424;
}
.main-ul .main-li.selected .icon{
    color: #f42424;
    margin-left: 20rpx;
}
.modal{
    position: fixed;
    z-index: 2006;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,.7);
}
.cell {
    width: 100%;
    display: flex;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    line-height: 56rpx;
    position: relative;
    background-color: #fff;
    color: #333;
    font-size: 28rpx;
    overflow: hidden;
    vertical-align:middle;
    border-bottom: 1rpx solid #e5e5e5;
}
.title,.value {
    flex: 1;
}
.title {
    max-width: 180rpx;
}
.value {
    overflow: hidden; 
    text-align: left;
    position: relative;
    vertical-align: middle;
}