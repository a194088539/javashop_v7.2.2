/* components/vas-prompt/vas-prompt.wxss */
.prompt-box {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	z-index: 11;
	background: rgba(0, 0, 0, .5);
}

.prompt-content {
	position: absolute;
	left: 50%;
	top: 40%;
	width: 80%;
	max-width: 600rpx;
	border: 2rpx solid #ccc;
	border-radius: 10rpx;
	box-sizing: bordre-box;
	transform: translate(-50%, -50%);
	overflow: hidden;
	background: #fff;
}

.prompt-title {
	width: 100%;
	padding: 20rpx;
	text-align: center;
	font-size: 26rpx;
	color: #666;
	border-bottom: 2rpx solid #f1f1f1;
}
.prompt-input{
	margin:0;
	padding:20rpx;
	width:100%;
	height: 10vh;
	border:none;
	color: #666;
	font-size: 26rpx;
  box-sizing: border-box;
}
.prompt-btn-group{
	display: flex;
	border-top: 1rpx solid #ddd;
	justify-content: space-around;
	align-items: center;
}

.btn-item {
	flex: 1;
	line-height: 90rpx;
	background-color: white;
	border: none;
	text-align: center;
	font-size: 30rpx;
}
.prompt-certain-btn{
	color: #f42424;
}
.prompt-cancel-btn{
	border-right: 1rpx solid #ddd;
}
.contentFontColor {
	color: #868686;
}